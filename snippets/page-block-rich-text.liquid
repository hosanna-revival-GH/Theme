{% style %}
  .index-section--{{ block.id }} {
    background: {{ block.settings.color_bg }};
    color: {{ block.settings.color_text }};
  }
  .index-section--{{ block.id }} a {
    color: {{ block.settings.color_text }};
  }
{% endstyle %}

<div id="{{ block.settings.css-id }}" class="index-section index-section--{{ block.id }} index-section--no-space {{ block.settings.css-class }}" style="padding: {{ block.settings.space_above }}px 0 {{ block.settings.space_below }}px;">
  <div class="page-width text-{{ block.settings.align_text }}">
    <div class="grid">
      <div class="grid__item
        {% if block.settings.column_width == '100' %} medium-up--one-whole
        {% elsif block.settings.column_width == '50' %} medium-up--one-half medium-up--push-one-quarter
        {% else %} medium-up--three-quarters medium-up--push-one-eighth{% endif %}">
       
        {% if block.settings.title != blank %}
          <p class="h2">
            {{ block.settings.title | escape }}
          </p>
        {% endif %}
        {% if block.settings.text != blank %}
          <div class="rte">
            {% if block.settings.enlarge_text %}<div class="enlarge-text">{% endif %}
              {{ block.settings.text }}
            {% if block.settings.enlarge_text %}</div>{% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

