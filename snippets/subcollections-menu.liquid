{% assign shop_linklist = linklists.hosanna-revival-shop %}
{% if shop_linklist %}
  <div class="subcollections-menu">
    <ul>
      {% for link in shop_linklist.links %}
        {% if link.url contains '/collections/' %}
          <li {% if link.url == request.path %}class="active"{% endif %}>
            <a href="{{ link.url }}">{{ link.title }}</a>
            {% if link.links %}
              <ul>
                {% for child_link in link.links %}
                  {% if child_link.url contains '/collections/' %}
                    <li {% if child_link.url == request.path %}class="active"{% endif %}>
                      <a href="{{ child_link.url }}">{{ child_link.title }}</a>
                    </li>
                  {% endif %}
                {% endfor %}
              </ul>
            {% else %}
              <!-- Debug: No child links found for {{ link.title }} -->
            {% endif %}
          </li>
        {% endif %}
      {% endfor %}
    </ul>
  </div>
{% else %}
  <!-- Debug: shop_linklist not found -->
{% endif %}