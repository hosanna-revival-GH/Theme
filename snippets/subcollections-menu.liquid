  <ul class="no-bullets tag-list tag-list--active-tags">
    {% for link in linklists.main-menu.links %}
      <li class="tag">
        <a href="{{ link.url }}" class="no-ajax" {% if link.active %}style="font-weight: bold;" aria-current="page"{% endif %}>
          {{ link.title }}
        </a>

        {% if link.links != blank %}
          <ul class="no-bullets tag-list">
            {% for child_link in link.links %}
              <li class="tag">
                <a href="{{ child_link.url }}" class="no-ajax" {% if child_link.active %}style="font-weight: bold;" aria-current="page"{% endif %}>
                  {{ child_link.title }}
                </a>

                {% if child_link.links != blank %}
                  <ul class="no-bullets tag-list">
                    {% for grandchild_link in child_link.links %}
                      <li class="tag">
                        <a href="{{ grandchild_link.url }}" class="no-ajax" {% if grandchild_link.active %}style="font-weight: bold;" aria-current="page"{% endif %}>
                          {{ grandchild_link.title }}
                        </a>
                      </li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </li>
    {% endfor %}
  </ul>