{% doc %}
  @prompt
    a blank block
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-blank-block-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    min-height: 100px;
    padding: 20px;
  }
{% endstyle %}

<div class="ai-blank-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
</div>

{% schema %}
{
  "name": "Blank block",
  "tag": null,
  "settings": [
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    }
  ],
  "presets": [
    {
      "name": "Blank block"
    }
  ]
}
{% endschema %}
