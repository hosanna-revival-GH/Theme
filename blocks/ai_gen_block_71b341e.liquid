{% doc %}
  @prompt
    button that is large and stretches across the entire page
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-full-width-button-{{ ai_gen_id }} {
    display: block;
    width: 100%;
  }

  .ai-full-width-button__container-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.vertical_padding }}px {{ block.settings.horizontal_padding }}px;
  }

  .ai-full-width-button__link-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    padding: {{ block.settings.button_padding }}px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    border-radius: {{ block.settings.border_radius }}px;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    transition: all 0.3s ease;
    cursor: pointer;
    text-align: center;
    {% if block.settings.text_transform == 'uppercase' %}
      text-transform: uppercase;
    {% elsif block.settings.text_transform == 'capitalize' %}
      text-transform: capitalize;
    {% endif %}
    letter-spacing: {{ block.settings.letter_spacing }}px;
  }

  .ai-full-width-button__link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.border_hover_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-full-width-button__container-{{ ai_gen_id }} {
      padding: {{ block.settings.vertical_padding_mobile }}px {{ block.settings.horizontal_padding_mobile }}px;
    }

    .ai-full-width-button__link-{{ ai_gen_id }} {
      padding: {{ block.settings.button_padding_mobile }}px;
      font-size: {{ block.settings.font_size_mobile }}px;
    }
  }
{% endstyle %}

<full-width-button-{{ ai_gen_id }} class="ai-full-width-button-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-full-width-button__container-{{ ai_gen_id }}">
    <a
      href="{{ block.settings.button_link }}"
      class="ai-full-width-button__link-{{ ai_gen_id }}"
    >
      {{ block.settings.button_text }}
    </a>
  </div>
</full-width-button-{{ ai_gen_id }}>

<script>
  (function() {
    class FullWidthButton{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        const link = this.querySelector('.ai-full-width-button__link-{{ ai_gen_id }}');
        
        if (link) {
          link.addEventListener('click', function(e) {
            if (!link.getAttribute('href') || link.getAttribute('href') === '') {
              e.preventDefault();
            }
          });
        }
      }
    }

    customElements.define('full-width-button-{{ ai_gen_id }}', FullWidthButton{{ ai_gen_id }});
  })();
</script>

