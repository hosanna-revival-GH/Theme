<div class="index-section">
  <div class="page-width text-center">
    {% for block in section.blocks %}
      <div style="margin: {{ block.settings.space_above }}px auto {{ block.settings.space_below }}px; max-width: {{ block.settings.image_width }}px;">
        {% if block.settings.image_link != blank %}
          <a href="{{ block.settings.image_link }}">
        {% endif %}
        
        {% if block.settings.image != blank %}
          {{ block.settings.image | img_url: block.settings.image_width | image_tag: alt: block.settings.image.alt }}
        {% endif %}
        
        {% if block.settings.image_link != blank %}
          </a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>
{% schema %}
{
  "name": "Custom Image Section",
  "class": "custom-image-section",
  "max_blocks": 5,
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Featured Images"
    }
  ],
  "blocks": [
    {
      "type": "image_block",
      "name": "Image Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "image_link",
          "label": "Image Link"
        },
        {
          "type": "number",
          "id": "image_width",
          "label": "Image Width (px)",
          "default": 300
        },
        {
          "type": "number",
          "id": "space_above",
          "label": "Space Above Image (px)",
          "default": 50
        },
        {
          "type": "number",
          "id": "space_below",
          "label": "Space Below Image (px)",
          "default": 50
        }
      ]
    }
  ],
}
{% endschema %}