<!-- Combined Content Section -->
<div class="combined-content-section" data-section-id="{{ section.id }}">

  <!-- Slideshow -->
  <div class="slideshow-wrapper" data-section-id="{{ section.id }}" data-section-type="slideshow-section">
    {% for block in section.blocks %}
      {% if block.type == 'hero' %}
        <div class="hero-slide" style="background-image: url('{{ block.settings.image | img_url: 'master' }}');">
          <div class="hero-content">
            <h2>{{ block.settings.title }}</h2>
            <p>{{ block.settings.subheading }}</p>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <!-- Rich Text -->
  {% for block in section.blocks %}
    {% if block.type == 'rich_text' %}
      <div class="rich-text-section">
        <div class="page-width">
          {{ block.settings.content }}
        </div>
      </div>
    {% endif %}
  {% endfor %}

  <!-- FAQ -->
  <div class="faq-section">
    <div class="page-width">
      {% for block in section.blocks %}
        {% if block.type == 'faq' %}
          <details>
            <summary>{{ block.settings.question }}</summary>
            <p>{{ block.settings.answer }}</p>
          </details>
        {% endif %}
      {% endfor %}
    </div>
  </div>

</div>

<!-- Styles -->
<style>
  .hero-slide {
    color: #fff;
    text-align: center;
    background-size: cover;
    background-position: center;
    padding: 50px 0;
  }
  .rich-text-section {
    padding: 20px 0;
  }
  .faq-section details {
    margin: 10px 0;
    cursor: pointer;
  }
  .faq-section summary {
    font-weight: bold;
  }
</style>

{% schema %}
{
  "name": "Toolkit Combined Content",
  "settings": [
    {
      "type": "header",
      "content": "Combined Content Section"
    }
  ],
  "blocks": [
    {
      "type": "hero",
      "name": "Hero Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Hero Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title Here"
        },
        {
          "type": "textarea",
          "id": "subheading",
          "label": "Subheading",
          "default": "Subheading Here"
        }
      ]
    },
    {
      "type": "rich_text",
      "name": "Rich Text Block",
      "settings": [
        {
          "type": "richtext",
          "id": "content",
          "label": "Content",
          "default": "<p>Your rich text here</p>"
        }
      ]
    },
    {
      "type": "faq",
      "name": "FAQ Block",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "What is your question?"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer",
          "default": "<p>The answer to the question.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
    }
  ]
}
{% endschema %}