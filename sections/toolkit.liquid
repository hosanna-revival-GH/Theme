

<style>
  .hero-section {
    color: #fff;
    text-align: center;
    background-size: cover;
    background-position: center;
  }
  .hero-content h1 {
    font-size: 2em;
  }
  .rich-text-section {
    padding: 20px 0;
  }
  .faq-section details {
    margin: 10px 0;
  }
  .faq-section summary {
    font-weight: bold;
    cursor: pointer;
  }
</style>

{% schema %}
{
  "name": "Toolkit Combined Content",
  "settings": [
    {
      "type": "header",
      "content": "Combined Content Section"
    }
  ],
  "blocks": [
    {
      "type": "hero",
      "name": "Hero Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Hero Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title Here"
        },
        {
          "type": "textarea",
          "id": "subheading",
          "label": "Subheading",
          "default": "Subheading Here"
        }
      ]
    },
    {
      "type": "rich_text",
      "name": "Rich Text Block",
      "settings": [
        {
          "type": "richtext",
          "id": "content",
          "label": "Content",
          "default": "<p>Your rich text here</p>"
        }
      ]
    },
    {
      "type": "faq",
      "name": "FAQ Block",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "What is your question?"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer",
          "default": "<p>The answer to the question.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
    }
  ]
}
{% endschema %}