<!-- Combined Content Section Output -->
<div class="combined-content-section" id="toolkit-{{ section.id }}">

  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'hero' %}
        <div class="slideshow-wrapper" data-section-id="{{ section.id }}" data-section-type="slideshow-section" {% if block.settings.parallax %}data-parallax="true"{% endif %}>
          <div class="hero-section" style="background-image: url('{{ block.settings.image | img_url: 'master' }}');">
            <div class="hero-content" style="text-align: {{ block.settings.text_align }};">
              <h2 class="h1 hero__title" style="font-size: {{ block.settings.title_size }}px;">{{ block.settings.title }}</h2>
              <div class="hero__subtitle">{{ block.settings.subheading }}</div>
              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}" class="btn" style="background-color: {{ block.settings.color_accent }};">{{ block.settings.link_text }}</a>
              {% endif %}
            </div>
          </div>
        </div>

      {% when 'rich_text' %}
<div class="rich-text-section" {% if block.settings.css-id != blank %}id="{{ block.settings.css-id }}"{% endif %} class="{{ block.settings.css-class }}" style="text-align: {{ block.settings.align_text }}; background-color: {{ block.settings.color_bg }}; color: {{ block.settings.color_text }}; padding-top: {{ block.settings.space_above }}px; padding-bottom: {{ block.settings.space_below }}px;">
  <div class="page-width{% if block.settings.narrow_column %} page-width--narrow{% endif %} rte">
    {% if block.settings.heading != blank %}
      <h2 style="margin-bottom: {{ block.settings.block_bottom_space }}px;">{{ block.settings.heading }}</h2>
    {% endif %}
    <div class="{% if block.settings.enlarge_text %} enlarge-text{% endif %}" style="{% if block.settings.align_text_block != 'inherit' %}text-align: {{ block.settings.align_text_block }};{% endif %}">
      {{ block.settings.text }}
    </div>
  </div>
</div>

{% when 'faq' %}
    <div class="faq-section" style="padding-top: {{ block.settings.space_above }}px; padding-bottom: {{ block.settings.space_below }}px;">
    <div class="page-width page-width--narrow">
      <button type="button" class="collapsible-trigger collapsible-trigger--inline collapsible--auto-height text-left" aria-controls="FAQ-content-{{ block.id }}" aria-expanded="false">
         {%- render 'collapsible-icons-alt', no_circle: true -%}
        <span>{{ block.settings.question }}</span>
      </button>
      <div id="FAQ-content-{{ block.id }}" class="collapsible-content collapsible-content--all">
        <div class="collapsible-content__inner collapsible-content__inner--faq rte">
          {{ block.settings.answer }}
        </div>
      </div>
    </div>
  </div>

  {% when 'single-button' %}
  <div class="index-section-no-margin">
    <div class="page-width text-{{ block.settings.alignment }}">
      <div style="margin: {{ block.settings.space_above }}px auto {{ block.settings.space_below }}px;">
        <a href="{{ block.settings.button_link }}" class="btn btn--{{ block.settings.button_size }}">
          {{ block.settings.button_text }}
        </a>
      </div>
    </div>
  </div>
      
  {% when 'text_and_image' %}
{% assign block_settings = block.settings %}

{% if block_settings.divider %}<div class="section--divider"></div>{% endif %}

{% assign block_settings = block.settings %}

<div class="index-section">
  <div class="page-width feature-row-wrapper feature-row--{{ block_settings.image_width }}">
    <div class="feature-row">
      {% if block_settings.layout == 'right' %}
        <div class="feature-row__item feature-row__images aos-init aos-animate" data-aos="">
          {% if block_settings.image2 != blank %}
            <div class="feature-row__second-image">
              <div class="image-wrap loaded" style="height: 0; padding-bottom: 125.0%;">
                   {%- liquid
                    if block.settings.image2 == blank
                      assign sizeVariable = block.settings.image_width | append: 'vw'
                      assign fallback = '100vw'
                    else
                      assign sizeVariable = 'calc(0.4 * 50vw)'
                      assign fallback = '40vw'
                    endif

                    assign imageWidth = block.settings.image_width | times: 1
                    if imageWidth >= 50
                      assign loading = block.settings.lazyload_images
                    else
                      assign loading = true
                    endif
                  -%}
                  {%- render 'image-element',
                    img: block.settings.image,
                    widths: '180, 360, 540, 750, 900, 1080',
                    loading: loading,
                    sizeVariable: sizeVariable,
                    fallback: fallback,
                    classes: 'feature-row__image',
                  -%}
              </div>
            </div>
          {% endif %}
        </div>
      {% endif %}

      <div class="feature-row__item feature-row__text feature-row__text--{{ block_settings.layout }} text-{{ block_settings.align_text }} aos-init aos-animate" data-aos="">
        {% if block_settings.subtitle != blank %}
          <div class="h5 subheading">{{ block_settings.subtitle }}</div>
        {% endif %}
        {% if block_settings.subtitle != blank %}
          <div class="feature-row__subtitle">{{ block_settings.subtitle }}</div>
        {% endif %}
        {% if block_settings.title != blank %}
          <h2 class="h3">{{ block_settings.title | escape }}</h2>
        {% endif %}
        {% if block_settings.text != blank %}
          <div class="rte">{{ block_settings.text }}</div>
        {% endif %}
        {% if block_settings.button_label != blank %}
          <a href="{{ block_settings.button_link }}" class="btn">{{ block_settings.button_label }}</a>
        {% endif %}
      </div>

      {% if block_settings.layout == 'left' %}
        <div class="feature-row__item feature-row__images aos-init aos-animate" data-aos="">
          {% if block_settings.image != blank %}
            <div class="feature-row__first-image">
              <div class="image-wrap loaded" style="height: 0; padding-bottom: 125.0%;">
                {% render 'image-element', img: block_settings.image, class: 'feature-row__image', width: '1080', height: '1350' %}
              </div>
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

      
    {% endcase %}
  {% endfor %}

</div>

<!-- Styles -->
<style>
  .hero-section {
    color: #fff;
    text-align: center;
    background-size: cover;
    background-position: center;
    padding: 50px 0;
  }
  .hero-content h2 {
    font-size: 2em;
  }
  .rich-text-section {
    padding: 20px 0;
  }
  .faq-section details {
    margin: 10px 0;
    cursor: pointer;
  }
  .faq-section summary {
    font-weight: bold;
  }
  #toolkit-{{ section.id }} {
    padding-top: {{ section.settings.space_above }}px;
     padding-bottom: {{ section.settings.space_below }}px;
  }
</style>

