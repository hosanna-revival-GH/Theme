  "name": "Combined Content Section",
  "settings": [
     {
      "type": "range",
      "id": "space_above",
      "label": "Top padding",
      "default": 75,
      "min": 0,
      "max": 75,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "space_below",
      "label": "Bottom padding",
      "default": 75,
      "min": 0,
      "max": 75,
      "unit": "px"
    },
  ],
  "blocks": [
    {
      "type": "hero",
      "name": "Hero Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Hero Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "subheading",
          "label": "Subheading"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "link_text",
