<!-- Combined Content Section -->
<div class="combined-content-section" data-section-id="{{ section.id }}">

  <!-- Slideshow -->
  <div class="slideshow-wrapper" data-section-id="{{ section.id }}" data-section-type="slideshow-section">
    {% for block in section.blocks %}
      {% if block.type == 'hero' %}
        <div class="hero-slide" style="background-image: url('{{ block.settings.image | img_url: 'master' }}');">
          <div class="hero-content">
            <h2>{{ block.settings.title }}</h2>
            <p>{{ block.settings.subheading }}</p>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <!-- Rich Text -->
  {% for block in section.blocks %}
    {% if block.type == 'rich_text' %}
      <div class="rich-text-section">
        <div class="page-width">
          {{ block.settings.content }}
        </div>
      </div>
    {% endif %}
  {% endfor %}

  <!-- FAQ -->
  <div class="faq-section">
    <div class="page-width">
      {% for block in section.blocks %}
        {% if block.type == 'faq' %}
          <details>
            <summary>{{ block.settings.question }}</summary>
            <p>{{ block.settings.answer }}</p>
          </details>
        {% endif %}
      {% endfor %}
    </div>
  </div>

</div>

<!-- Styles -->
<style>
  .hero-slide {
    color: #fff;
    text-align: center;
    background-size: cover;
    background-position: center;
    padding: 50px 0;
  }
  .rich-text-section {
    padding: 20px 0;
  }
  .faq-section details {
    margin: 10px 0;
    cursor: pointer;
  }
  .faq-section summary {
    font-weight: bold;
  }
</style>

{% schema %}
{
  "name": "Combined Content Section",
  "settings": [],
  "blocks": [
    {
      "type": "hero",
      "name": "Hero Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Hero Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "subheading",
          "label": "Subheading"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Button Text"
        },
        {
          "type": "color",
          "id": "color_accent",
          "label": "Accent Color"
        },
        {
          "type": "select",
          "id": "text_align",
          "label": "Text Alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ]
        },
        {
          "type": "range",
          "id": "title_size",
          "label": "Title Font Size",
          "min": 16,
          "max": 72,
          "step": 1,
          "default": 32,
          "unit": "px"
        },
        {
          "type": "checkbox",
          "id": "parallax",
          "label": "Enable Parallax"
        }
      ]
    },
    {
      "type": "rich_text",
      "name": "Rich Text Block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        }
      ]
    },
    {
      "type": "faq",
      "name": "FAQ Block",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
    }
  ]
}
{% endschema %}