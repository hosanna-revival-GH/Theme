<div class="image-row image-row--gutters">
  {% for block in section.blocks %}
    {% if block.settings.enable_image %}
      <div data-aos="row-of-4" class="aos-init aos-animate">
        <div class="image-row__image image-wrap" style="width: {{ block.settings.image_width }}px;">
          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}">
          {% endif %}
          
          {{ block.settings.image | image_url: width: block.settings.image_width | image_tag: class: 'photoswipe__image js-photoswipe__zoom', alt: block.settings.caption }}
          
          {% if block.settings.link != blank %}
            </a>
          {% endif %}
        </div>
      </div>
    {% endif %}
  {% endfor %}
</div>

{% schema %}
{
  "name": "Image gallery",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "select",
      "id": "align_text",
      "label": "Alignment",
      "default": "center",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Centered"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "checkbox",
          "id": "enable_image",
          "label": "Show image",
          "default": true
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "range",
          "id": "image_width",
          "label": "Image width",
          "default": 650,
          "min": 60,
          "max": 650,
          "step": 10,
          "unit": "px"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Caption",
          "default": "Image Caption"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image gallery",
    }
  ]
}
{% endschema %}