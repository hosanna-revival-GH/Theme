<div class="image-row image-row--gutters">
  {% for block in section.blocks %}
    {% if block.settings.enable_image %}
      <div class="image-row__item aos-init aos-animate">
        <div class="image-wrap">
          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}">
          {% endif %}
          {%- if block.settings.image != blank -%}
            {{ block.settings.image | image_url: width: block.settings.image_width | image_tag: class: 'photoswipe__image js-photoswipe__zoom', alt: block.settings.caption }}
          {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif %}
          {% if block.settings.link != blank %}
            </a>
          {% endif %}
        </div>
      </div>
    {% endif %}
  {% endfor %}
</div>
{% style %}
.image-row {
  display: flex;
  flex-wrap: wrap;
  margin-left: -15px; /* Adjusts for gutter */
  margin-right: -15px; /* Adjusts for gutter */
}

.image-row__item {
  flex: 0 0 25%; /* Each item takes up 25% of the container width */
  max-width: 25%; /* Each item takes up 25% of the container width */
  padding-left: 15px; /* Gutter */
  padding-right: 15px; /* Gutter */
  box-sizing: border-box;
}

/* Responsive adjustments */
@media (max-width: 1024px) {
  .image-row__item {
    flex: 0 0 50%;
    max-width: 50%;
  }
}

@media (max-width: 768px) {
  .image-row__item {
    flex: 0 0 100%;
    max-width: 100%;
  }
}

.image-wrap {
  width: 100%; /* Ensures the image wrapper takes up the full width of its parent */
  overflow: hidden; /* Ensures no overflow of content */
  position: relative; /* For positioning inner elements */
}

.photoswipe__image {
  width: 100%; /* Ensures the image takes up the full width of its parent */
  height: auto; /* Keeps the image aspect ratio */
  display: block; /* Removes bottom space under the image */
}
{% endstyle %}
{% schema %}
{
  "name": "Image gallery",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "select",
      "id": "align_text",
      "label": "Alignment",
      "default": "center",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Centered"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "checkbox",
          "id": "enable_image",
          "label": "Show image",
          "default": true
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "range",
          "id": "image_width",
          "label": "Image width",
          "default": 650,
          "min": 60,
          "max": 650,
          "step": 10,
          "unit": "px"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Caption",
          "default": "Image Caption"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image gallery",
    }
  ]
}
{% endschema %}