<div class="image-row image-row--gutters">
  {% for block in section.blocks %}
    {% if block.settings.enable_image %}
      <div data-aos="row-of-4" class="aos-init aos-animate">
        <div class="image-row__image image-wrap" style="width: {{ block.settings.image_width }}px;">
          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}">
          {% endif %}
          {%- if section.settings.image == blank -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
           {% else %}   
          {{ block.settings.image | image_url: width: block.settings.image_width | image_tag: class: 'photoswipe__image js-photoswipe__zoom', alt: block.settings.caption }}
          {% endif %}
          {% if block.settings.link != blank %}
            </a>
          {% endif %}
        </div>
      </div>
    {% endif %}
  {% endfor %}
</div>
{% style %}
  .image-row {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between; /* Adjusts spacing between images */
  margin-left: -15px; /* Adjusts for gutter */
  margin-right: -15px; /* Adjusts for gutter */
}

.image-row__image {
  flex: 0 0 25%; /* Each image takes up 25% of the container width */
  max-width: 25%; /* Each image takes up 25% of the container width */
  padding-left: 15px; /* Gutter */
  padding-right: 15px; /* Gutter */
  box-sizing: border-box;
}
{% endstyle %}
{% schema %}
{
  "name": "Image gallery",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "select",
      "id": "align_text",
      "label": "Alignment",
      "default": "center",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Centered"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "checkbox",
          "id": "enable_image",
          "label": "Show image",
          "default": true
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "range",
          "id": "image_width",
          "label": "Image width",
          "default": 650,
          "min": 60,
          "max": 650,
          "step": 10,
          "unit": "px"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Caption",
          "default": "Image Caption"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image gallery",
    }
  ]
}
{% endschema %}